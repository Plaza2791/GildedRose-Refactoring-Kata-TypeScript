{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["app/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "jest.config.ts", "vitest.config.ts"]
}
